<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item>
    <shape android:shape="rectangle">
        <corners android:radius="16dp"/>
        <gradient
            android:angle="45"
            android:centerX="35%"
            android:centerColor="#56A847"
            android:startColor="#AFB42B"
            android:endColor="#35D219"
            android:type="linear"
            ></gradient>
        <padding
            android:left="0dp"
            android:top="0dp"
            android:right="0dp"
            android:bottom="0dp"
            ></padding>
        <size
            android:width="250dp"
            android:height="64dp"
            />
        <stroke
            android:width="3dp"
            android:color="#878787"
            />
    </shape>

</item>
</selector>